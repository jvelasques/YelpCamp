extends layout

block content
  div.container
    div.row
      h1.text-center Sign Up

      div.form-container
        form(action="/register", method="POST")
          div.form-group
            input.form-control(type="text", name="username", placeholder="Insert Username...")
          div.form-group
            input.form-control(type="password", name="password", placeholder="Insert Password...")
          div.form-group
            button.btn.btn-primary.btn-lg.btn-block Register!

        a(href="/") Go Back